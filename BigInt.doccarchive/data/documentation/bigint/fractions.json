{"sections":[],"hierarchy":{"paths":[["doc:\/\/BigInt\/documentation\/BigInt"]]},"seeAlsoSections":[{"identifiers":["doc:\/\/BigInt\/documentation\/BigInt\/Usage","doc:\/\/BigInt\/documentation\/BigInt\/Examples","doc:\/\/BigInt\/documentation\/BigInt\/Performance","doc:\/\/BigInt\/documentation\/BigInt\/Chinese","doc:\/\/BigInt\/documentation\/BigInt\/Dependencies","doc:\/\/BigInt\/documentation\/BigInt\/References","doc:\/\/BigInt\/documentation\/BigInt\/Algorithms"],"generated":true}],"kind":"article","variants":[{"paths":["\/documentation\/bigint\/fractions"],"traits":[{"interfaceLanguage":"swift"}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"metadata":{"modules":[{"name":"BigInt"}],"roleHeading":"Article","title":"Fractions","role":"article"},"identifier":{"url":"doc:\/\/BigInt\/documentation\/BigInt\/Fractions","interfaceLanguage":"swift"},"primaryContentSections":[{"kind":"content","content":[{"anchor":"","type":"heading","level":2,"text":""},{"inlineContent":[{"type":"text","text":"Fractions are represented as "},{"type":"reference","isActive":true,"identifier":"doc:\/\/BigInt\/documentation\/BigInt\/BFraction"},{"type":"text","text":" values consisting of a numerator "},{"identifier":"doc:\/\/BigInt\/documentation\/BigInt\/BInt","type":"reference","isActive":true},{"text":" value and a denominator ","type":"text"},{"type":"reference","isActive":true,"identifier":"doc:\/\/BigInt\/documentation\/BigInt\/BInt"},{"type":"text","text":" value. The representation is normalized:"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"text","text":"The numerator and denominator have no common factors except 1"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"The denominator is always positive"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Zero is represented as 0\/1"}],"type":"paragraph"}]}]},{"text":"Creating BFraction’s","level":3,"anchor":"Creating-BFractions","type":"heading"},{"inlineContent":[{"type":"text","text":"Fractions are created by"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"text","text":"Specifying the numerator and denominator explicitly f.ex. "},{"code":"BFraction(17, 4)","type":"codeVoice"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Specifying the decimal value explictly f.ex. ","type":"text"},{"type":"codeVoice","code":"BFraction(4.25)"}]}]},{"content":[{"inlineContent":[{"text":"Using a string representation f.ex. ","type":"text"},{"type":"codeVoice","code":"BFraction(\"4.25\")!"},{"type":"text","text":" or equivalently "},{"type":"codeVoice","code":"BFraction(\"425E-2\")!"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Specifying a continued fraction like "},{"type":"codeVoice","code":"BFraction([3, 4, 12, 4])"},{"type":"text","text":" equivalent to 649 \/ 200"}]}]}],"type":"unorderedList"},{"inlineContent":[{"text":"Defining a fraction by specifying its decimal value might lead to surprises,","type":"text"},{"type":"text","text":" "},{"text":"because not all decimal values can be represented exactly as a floating point number.","type":"text"}],"type":"paragraph"},{"type":"paragraph","inlineContent":[{"text":"One might think that ","type":"text"},{"code":"BFraction(0.1)","type":"codeVoice"},{"text":" would equal 1\/10,","type":"text"},{"text":" ","type":"text"},{"text":"but in fact it equals 3602879701896397 \/ 36028797018963968 = 0.1000000000000000055511151231257827021181583404541015625","type":"text"}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"On the other hand "},{"code":"BFraction(\"0.1\")!","type":"codeVoice"},{"type":"text","text":" equals 1\/10."}]},{"text":"Converting BFraction’s","level":3,"type":"heading","anchor":"Converting-BFractions"},{"type":"paragraph","inlineContent":[{"text":"BFraction values can be converted to String values, to decimal String values, to Double values and to Continued Fraction values.","type":"text"}]},{"syntax":"swift","code":["let x = BFraction(1000, 7)","","\/\/ To String","let s1 = x.asString() \/\/ s1 = \"1000 \/ 7\"","","\/\/ To decimal String","let s1 = x.asDecimalString(precision: 8, exponential: false) \/\/ s1 = \"142.85714\"","let s2 = x.asDecimalString(precision: 8, exponential: true) \/\/ s2 = \"1.4285714E+2\"","","\/\/ To Double","let d = x.asDouble() \/\/ d = 142.8571428571429","","\/\/ To Continued Fraction","let f = x.asContinuedFraction() \/\/ f = [BInt(142), BInt(1), BInt(6)]"],"type":"codeListing"},{"type":"heading","level":3,"text":"Operations","anchor":"Operations"},{"inlineContent":[{"text":"The operations available to fractions are:","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"Arithmetic","type":"text"}]},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"addition","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"subtraction","type":"text"}]}]},{"content":[{"inlineContent":[{"text":"multiplication","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"division"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"modulo an integer"}]}]},{"content":[{"inlineContent":[{"text":"exponentiation","type":"text"}],"type":"paragraph"}]}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Rounding to an integer","type":"text"}]},{"items":[{"content":[{"inlineContent":[{"text":"round - to nearest integer","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"truncate - towards 0","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"ceil - towards +infinity","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"floor - towards -infinity"}]}]}],"type":"unorderedList"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Comparison - the six standard operations ==  !=  <  <=  >  >="}]}]}],"type":"unorderedList"},{"level":3,"anchor":"Bernoulli-Numbers","type":"heading","text":"Bernoulli Numbers"},{"type":"paragraph","inlineContent":[{"type":"text","text":"The static function"}]},{"type":"codeListing","syntax":"swift","code":["let Bn = BFraction.bernoulli(n)"]},{"type":"paragraph","inlineContent":[{"type":"text","text":"computes the n’th (n >= 0) Bernoulli number, which is a rational number."}]},{"inlineContent":[{"type":"text","text":"For example"}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["print(BFraction.bernoulli(60))","print(BFraction.bernoulli(60).asDecimalString(precision: 20, exponential: true))"]},{"type":"paragraph","inlineContent":[{"type":"text","text":"would print"}]},{"code":["-1215233140483755572040304994079820246041491 \/ 56786730","-2.1399949257225333665E+34"],"syntax":"swift","type":"codeListing"},{"type":"paragraph","inlineContent":[{"type":"text","text":"The static function"}]},{"syntax":"swift","type":"codeListing","code":["let x = BFraction.bernoulliSequence(n)"]},{"inlineContent":[{"text":"computes the n even numbered Bernoulli numbers B(0), B(2) … B(2 * n - 2).","type":"text"}],"type":"paragraph"},{"level":3,"type":"heading","anchor":"Harmonic-Numbers","text":"Harmonic Numbers"},{"inlineContent":[{"text":"The static function","type":"text"}],"type":"paragraph"},{"code":["let Hn = BFraction.harmonic(n)"],"type":"codeListing","syntax":"swift"},{"type":"paragraph","inlineContent":[{"text":"computes the n’th harmonic number, that is, 1 + 1\/2 + … + 1\/n","type":"text"}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The static function"}]},{"syntax":"swift","code":["let x = BFraction.harmonicSequence(n)"],"type":"codeListing"},{"type":"paragraph","inlineContent":[{"text":"returns an array containing the first n harmonic numbers.","type":"text"}]}]}],"refer